pipeline {
    agent {
        label 'ansible'
    }
    
    stages {
        stage('Check Current Directory') {
            steps {
                echo 'Current Directory: '
                sh 'pwd'

                echo 'Current User: '
                sh 'whoami'

                def timestampDir = "workspace/$(date '+%Y%m%d_%H%M%S')"
                echo "Creating directory: ${timestampDir}"
                sh "mkdir -p ${timestampDir}"
            }
        }
    }
}
